/* components/tab/tab.wxss */
.tabView {
  width: 750rpx;
  height: 100rpx;
  background-color: #FFF;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0px -2rpx 8px rgba(184, 184, 184, 0.1);
}
.tabViewX {
  padding-bottom: 34rpx;
}

.newNotice {
  margin: 0 20rpx 0 20rpx;
  width: 110rpx;
  height: 70rpx;
  border-radius: 40rpx;
  /* box-shadow: 0px 4rpx 0px rgba(184, 184, 184, 0.5); */
  box-shadow: 0px 4rpx 10rpx rgba(96, 101, 218, 0.3);
  background: linear-gradient(to right, #6065DA, #5B75E0);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.newNoticeHover {
  background-color: #565AB8;
}

.newNotice image {
  height: 40rpx;
  width: 50rpx;
}

.tabBar {
  width: 0;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tabBar image {
  height: 50rpx;
  width: 50rpx;
}

.tabBar text {
  font-size: 12px;
  font-weight: bold;
  color: #ADADAD;
}