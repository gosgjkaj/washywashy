/* components/modal/modal.wxss */
.background {
  height: 100%;
  width: 100%;
  opacity: 0;
  background-color: rgba(100, 100, 100, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal {
  padding: 40rpx;
  background-color: #F6F6F6;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.modal > .title {
  font-size: 17px;
  font-weight: bold;
  color: #353535;
  margin-bottom: 20rpx;
}

.modal > .subtitle {
  width: 520rpx;
  text-align: center;
  font-size: 15px;
  color: #888;
  margin-bottom: 10rpx;
}

.control {
  margin-top: 30rpx;
  width: 560rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.control > button {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 55rpx;
  box-shadow: 0px 4rpx 0px rgba(184, 184, 184, 0.5);
  font-size: 17px;
}

button.cancel {
  flex-grow: 1;
  background-color: #F0F0F0;
  color: #888;
}

button.confirm {
  margin-left: 40rpx;
  width: 360rpx;
  background-color: #6065DA;
  color: #FFF;
}

button.cancelButtonHover {
  background-color: #DDD;
}

button.confirmButtonHover {
  background-color: #565AB8;
}